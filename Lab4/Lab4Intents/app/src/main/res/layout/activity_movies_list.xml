<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_black"
    tools:context=".MoviesListActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle=""
                android:fontFamily="sans-serif-light"
                android:text="Celluloid.com"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Movie DataBase"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Welcome"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/hollywoodImageView"
                android:onClick="HollywoodClicked"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/hollywood" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Once Upon a Time in Hollywood (2019)"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:id="@+id/interstellarImageView"
                android:onClick="InterstellarClicked"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/interstellar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Interstellar (2014)"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:id="@+id/wildImageView"
                android:onClick="WildClicked"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/intothewild" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Into the Wild (2007)"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="SeeMoreButtonClicked"
                android:text="See More"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/bg_gray"
                android:textSize="14sp"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>